                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                <Canvas Width="24" Height="24">
                                    <Path Data="M8,2 L16,2 L12,6 Z" Fill="{TemplateBinding GlyphArrowBrush}" />
                                    <Border
                                        Canvas.Bottom="0"
                                        Width="24"
                                        Height="12"
                                        Background="{TemplateBinding GlyphBackground}"
                                        BorderBrush="{TemplateBinding GlyphBorderBrush}"
                                        BorderThickness="1,3,1,1"
                                        CornerRadius="0,0,1,1" />
                                </Canvas>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>

            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TargetDock" Value="DockLeft" />
                    <Condition Property="IsOuter" Value="true" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Height" Value="40" />
                    <Setter Property="Width" Value="40" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ctrls:DockTargetButton">
                                <Border
                                    Background="{TemplateBinding OuterBackground}"
                                    BorderBrush="{TemplateBinding OuterBorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                    <Border
                                        Margin="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="{TemplateBinding CornerRadius}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M22,8 L22,16 L18,12 Z" Fill="{TemplateBinding GlyphArrowBrush}" />
                                            <Border
                                                Canvas.Left="0"
                                                Width="12"
                                                Height="24"
                                                Background="{TemplateBinding GlyphBackground}"
                                                BorderBrush="{TemplateBinding GlyphBorderBrush}"
                                                BorderThickness="1,3,1,1"
                                                CornerRadius="0,0,1,1" />
                                        </Canvas>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TargetDock" Value="DockTop" />
                    <Condition Property="IsOuter" Value="true" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Height" Value="40" />
                    <Setter Property="Width" Value="40" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ctrls:DockTargetButton">
                                <Border
                                    Background="{TemplateBinding OuterBackground}"
                                    BorderBrush="{TemplateBinding OuterBorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                    <Border
                                        Margin="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="{TemplateBinding CornerRadius}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M8,22 L16,22 L12,18 Z" Fill="{TemplateBinding GlyphArrowBrush}" />
                                            <Border
                                                Canvas.Top="0"
                                                Width="24"
                                                Height="12"
                                                Background="{TemplateBinding GlyphBackground}"
                                                BorderBrush="{TemplateBinding GlyphBorderBrush}"
                                                BorderThickness="1,3,1,1"
                                                CornerRadius="0,0,1,1" />
                                        </Canvas>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TargetDock" Value="DockRight" />
                    <Condition Property="IsOuter" Value="true" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Height" Value="40" />
                    <Setter Property="Width" Value="40" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ctrls:DockTargetButton">
                                <Border
                                    Background="{TemplateBinding OuterBackground}"
                                    BorderBrush="{TemplateBinding OuterBorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                    <Border
                                        Margin="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="{TemplateBinding CornerRadius}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M2,8 L6,12 L2,16 Z" Fill="{TemplateBinding GlyphArrowBrush}" />
                                            <Border
                                                Canvas.Right="0"
                                                Width="12"
                                                Height="24"
                                                Background="{TemplateBinding GlyphBackground}"
                                                BorderBrush="{TemplateBinding GlyphBorderBrush}"
                                                BorderThickness="1,3,1,1"
                                                CornerRadius="0,0,1,1" />
                                        </Canvas>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="TargetDock" Value="DockBottom" />
                    <Condition Property="IsOuter" Value="true" />
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="Height" Value="40" />
                    <Setter Property="Width" Value="40" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ctrls:DockTargetButton">
                                <Border
                                    Background="{TemplateBinding OuterBackground}"
                                    BorderBrush="{TemplateBinding OuterBorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="{TemplateBinding CornerRadius}"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                    UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                    <Border
                                        Margin="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="{TemplateBinding CornerRadius}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        UseLayoutRounding="{TemplateBinding UseLayoutRounding}">
                                        <Canvas Width="24" Height="24">
                                            <Path Data="M8,2 L16,2 L12,6 Z" Fill="{TemplateBinding GlyphArrowBrush}" />
                                            <Border
                                                Canvas.Bottom="0"
                                                Width="24"
                                                Height="12"
                                                Background="{TemplateBinding GlyphBackground}"
                                                BorderBrush="{TemplateBinding GlyphBorderBrush}"
                                                BorderThickness="1,3,1,1"
                                                CornerRadius="0,0,1,1" />
                                        </Canvas>
                                    </Border>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </MultiTrigger.Setters>
            </MultiTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>